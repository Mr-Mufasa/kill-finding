{
  "appId": "com.valorant.killextractor",
  "productName": "Valorant Kill Extractor",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "public/preload.js",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis",
    "publisherName": "Valorant Kill Extractor",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "displayLanguageSelector": false
  },
  "publish": {
    "provider": "github",
    "owner": "Mr-Mufasa",
    "repo": "kill-finding"
  }
}
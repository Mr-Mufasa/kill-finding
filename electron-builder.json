{
  "appId": "com.valorant.killextractor",
  "productName": "Valorant Kill Extractor",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "public/preload.js",
    "node_modules/**/*"
  ],
  "extraFiles": [
    {
      "from": "public/favicon.ico",
      "to": "favicon.ico"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}